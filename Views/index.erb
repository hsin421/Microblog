
<div id="indexWrapper">
  <form method='POST' action='/sign_in'>
       <h2>Sign In</h2>
       <% for a in [:notice, :alert, :error, :greeting] do if !flash[a].nil? %>
      <div id="flash"><b><%= flash[a] %></b></div>
    <% end %>
    <% end %>
    <div>
      <input type="text" name = "[user]uname"required/>
      <label for="uname">User Name</label>
    </div>
    <div>
      <input type="password" name ="[user]pwd" required/>
      <label for="pwd">Password</label>
    </div>
       <button type="submit">Submit</button>
       <br> <br> <br>
     <p style="font-size:12px">Not a member? <a href="/sign_up">Sign up!</a></p>
       </form>
</div>
