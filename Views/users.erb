

<div id="profileWrapper">

 <% for a in [:notice, :alert, :error, :greeting] do if !flash[a].nil? %>
      <div id="flash"><b><%= flash[a] %></b></div>
    <% end %>
    <% end %>
	<div id="profileSidebar">
	<div id="profilePicUser"></div>
	    <% if User.find(current_user.id).followings.find_by("following_id"=>@id) == nil %>
		<%= "<a href='/follow/#{@id}'> <input id='follow_button' type='submit' value='Follow Me!'> </a>"%>
		<% else %>
		<input id="follow_button2" type="submit" value="Following!">
		<% end %>
		<ul id="sidebarLinks">
			<li id="userProfileWelcome"> @<%= User.find(@id).uname %></li>
			<li><a href="/profile_edit">Edit Profile</a></li>
			<li id="followinglist">Following</li>
			<li><div id="slidedown">  <% for a in followinglistgenerator(User.find(@id), @id) %>
                                      <%= "<a href='/users/#{a.following_id}'> #{User.find(a.following_id).uname} </a>" %>
                                      <br>
                                      <% end %> 
			 </div></li>
			<li id="followerlist">Followers</li>
			<li><div id="slidedown2">  <% for a in followerlistgenerator(User.find(@id), @id) %>
                                      <%= "<a href='/users/#{a.follower_id}'> #{User.find(a.follower_id).uname} </a>" %>
                                      <br>
                                      <% end %> 
			 </div></li>
		</ul>
	</div>
	<div id="postFeed">
		
		<div id="feed">

			<div class="post" id="f3"><%= superselfpost(User.find(@id),9) %></div>
			<div class="post" id="f4"><%= superselfpost(User.find(@id),8) %></div>
			<div class="post" id="f3"><%= superselfpost(User.find(@id),7) %></div>
			<div class="post" id="f4"><%= superselfpost(User.find(@id),6) %></div>
			<div class="post" id="f5"><%= superselfpost(User.find(@id),5) %></div>
			<div class="post" id="f6"><%= superselfpost(User.find(@id),4) %></div>
			<div class="post" id="f7"><%= superselfpost(User.find(@id),3) %></div>
			<div class="post" id="f8"><%= superselfpost(User.find(@id),2) %></div>
			<div class="post" id="f9"><%= superselfpost(User.find(@id),1) %></div>
			<div class="post" id="f1"><%= superselfpost(User.find(@id),0) %></div>

		</div>
	</div>
</div>
